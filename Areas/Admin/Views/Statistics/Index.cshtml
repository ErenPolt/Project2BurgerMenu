@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .card {
        height: 150px;
    }
</style>

<div class="container">
    <!-- 1. Satır -->
    <div class="row">
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ürün Sayısı</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.products</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ürünlerin Ortalama Fiya</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.avgPrice</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">En Pahalı Ürün </h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.maxPrice</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">En Ucuz Ürün</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.minprice</h4>
                </div>
            </div>
        </div>

    </div>

    <!-- Boşluk bırakmak için margin -->
    <div class="mb-4"></div>

    <!-- 2. Satır -->
    <div class="row">
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Kategori Sayısı</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.categories</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Burger Sayısı</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.burger</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Admin Sayısı</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.admins</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Abone Sayısı</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.subscribes</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Boşluk bırakmak için margin -->
    <div class="mb-4"></div>

    <!-- 3. Satır -->
    <div class="row">
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Rezervasyon Sayısı</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.reservations</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Onaylanan Rezervasyon Sayısı</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.acceptedReservations</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Beklenen Rezervasyon Sayısı</h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.waitReservations</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-3 stretch-card d-flex text-center">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">İptal Edilen Rezervasyon Sayısı </h4>
                    <h4 class="text-dark font-weight-bold mb-2">@ViewBag.canceledReservations</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Rastgele bir renk oluşturma fonksiyonu
    function getRandomColor() {
        const letters = '0123456789ABCDEF';
        let color = '#';
        for (let i = 0; i < 6; i++) {
            color += letters[Math.floor(Math.random() * 16)];
        }
        return color;
    }

    window.onload = function () {
        // Tüm kart başlıklarını seçin
        const cardTitles = document.querySelectorAll('.card-title');
        cardTitles.forEach(title => {
            // Rastgele renk belirleyin
            title.style.color = getRandomColor();
        });
    };</script>