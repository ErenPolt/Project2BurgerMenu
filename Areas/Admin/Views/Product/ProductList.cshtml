@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Project2BurgerMenu.Entities.Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Listesi</h4>
            <p class="card-description">


            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ürün Id</th>
                            <th>Ürün Görsel</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Kategori</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.ProductId</td>
                                <td><img src="@item.ImageUrl" height="50" width="50" /> </td>
                                <td>@item.ProductName</td>
                                <td>@item.Category.CategoryName</td>
                                @*<td><a href="#" class="btn btn-warning">Kategori Ürünleri</a></td>*@
                                <td><a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger rounded-pill">Sil</a></td>
                                <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-success rounded-pill">Güncelle</a></td>
                               
                            </tr>
                        }

                    </tbody>
                </table>
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("ProductList", new { page }), new PagedListRenderOptions
            {
                LiElementClasses = new List<string>
                    { "page-link"}
            })
                <a href="/Admin/Product/CreateProduct/" class="btn btn-primary rounded-pill"   style="background: linear-gradient(45deg, #6ce9da, #360267); ">Yeni Ürün Girişi</a>
            </div>
        </div>
    </div>
</div>




