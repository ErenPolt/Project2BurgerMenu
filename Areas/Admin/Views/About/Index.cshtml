@model List<Project2BurgerMenu.Entities.About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Üst Başlık</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutID</td>
                                <td>@item.Subtitle</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Admin/About/DeleteAbout/@item.AboutID" class="btn btn-danger rounded-pill">Sil</a></td>
                                <td><a href="/Admin/About/UpdateAbout/@item.AboutID" class="btn btn-success rounded-pill">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/About/CreateAbout/" class="btn btn-primary rounded-pill " style="background-color: #f17924;">Yeni Hakkımızda Ekle</a>

            </div>
        </div>
    </div>
</div>